<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:paddingStart="8dp"
              android:paddingEnd="8dp">

    <TextView android:id="@+id/effect_title"
              tools:text="Effect name"
              android:textColor="#000000"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="8dp" android:textSize="16sp"/>

    <TextView android:id="@+id/effect_desc"
              tools:text="Character name"
              android:textColor="#555555"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>

    <LinearLayout android:id="@+id/attached_skills"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

    </LinearLayout>

    <TextView android:text="@string/add_modifiers"
              android:textColor="#555555"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>
</LinearLayout>