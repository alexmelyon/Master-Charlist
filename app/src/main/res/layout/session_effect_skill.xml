<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
                android:layout_height="wrap_content" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <TextView android:id="@+id/title"
              tools:text="Skill name"
              android:layout_centerVertical="true"
              android:textColor="#000000"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textAppearance="?attr/textAppearanceListItem" android:textSize="14sp"/>

    <Button
            android:id="@+id/minusButton"
            android:text="-"
            android:textColor="@android:color/black"
            android:background="@android:color/transparent"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toStartOf="@+id/value"/>
    <TextView
            android:id="@+id/value"
            android:text="0"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_width="50dp"
            android:layout_height="34dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_alignParentTop="true"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_marginEnd="50dp"/>
    <Button
            android:id="@+id/plusButton"
            android:text="+"
            android:textColor="@android:color/black"
            android:background="@android:color/transparent"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toEndOf="@+id/value"
            android:layout_marginStart="-50dp"/>

</RelativeLayout>